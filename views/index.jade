extends layout

block content
	#top-nav-page.top_nav_page
		#navigation-menu.menu_div
			#work-button.button
				p Work
			#others-button.button
				p Others
		#background.landing_page
			#welcome-text-div Thank you for taking the time to get to know me
			img(src="images/buildings.png" style="width:90%; margin-top:10%; margin-left:5%; bottom:50px")
			
	#employees
		- each employee in employees
			div.employee
				div.created_at= employee.created_at
				div.title= employee.title 
				div.name= employee.name
				div.thumbnail-img
					img(src=cloudinary_obj.url(employee.img_id, { width: 100, height: 100, crop: 'fill'}))
				form( method="post", action="/employee/:id/delete") 
					input(name="_id", type="hidden", value=employee._id.toHexString()) 
					input(id="delete", value="X", type="submit")
				form( method="get", action="/employee/:id/edit") 
					input(name="_id", type="hidden", value=employee._id.toHexString()) 
					input(id="edit", value="Edit", type="submit")
					
	a(href="/employee/new")!= "Add New Employee"
block scripts
	script(src="/scripts/topPage.js")
	script.
		$(document).ready(function(){
			new page.pageControl()
		})	